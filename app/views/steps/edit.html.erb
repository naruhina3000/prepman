<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto my-5">
      <div class="card p-4">
        <h1>Edit Step</h1>
            <%= simple_form_for @step do |f| %>
            <%= f.input :description %>
            <div>
              <% if @step.photo.attached? %>
                <%= cl_image_tag @step.photo.key, class: "img-thumbnail" %>
              <% end %>
            </div>
            <%= f.input :photo, as: :file %>
            <%= f.submit "Edit Step", class:"btn btn-primary" %>
          <% end %>
      </div>
      <hr>
      <%= link_to "Back", recipe_steps_path(@step.recipe), class: "btn btn-warning" %>
    </div>
  </div>
</div>
