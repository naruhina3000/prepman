<body id="home">
    <div class="container-fluid">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card p-4 bg-white mt-5 mb-5" style="width: 100%; height 100%;">
                <%= image_tag "prepman.svg", class: "card-img-top", style:"height: 100%;" %>
                <div class="card-body" style="margin-top: -55px;">
                    <h4 class="card-title" style="text-align: center">Welcome to PrepMan!</h4>
                    <h5 class="card-text" style="text-align: center">Cooking has no limits</h5>
                    <p class="card-text" style="text-align: center">No matter what cooking skills you have, PrepMan will help you to become the next superhero-chef.</p>
                    
                    <% if user_signed_in? %>
                    <%= link_to "Get started", recipes_path, class:"btn btn-primary" %>                   
                    <% else %>
                    <%= link_to "Login", new_user_session_path, class:"btn btn-primary", data: {toggle: "modal", target: "#newUserModal"} %>
                    <%= link_to "Sign Up", new_user_registration_path, class:"btn btn-info", style: "width: 100%; margin-top: 8px;" %>
                    <% end %>
                    
                    
            </div>
        </div>
    </div>
    </div> 
</div>

</body>







