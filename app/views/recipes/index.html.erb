<div class="container-fluid mt-5">
<h1>Welcome to PrepMan! </h1>
    <div class="row my-5">
        <% @recipes.each do |recipe| %>
            <div class="col-md-6 py-2">
              <%= render 'card', recipe: recipe, current_user: user_signed_in? ? current_user : nil %>
            </div>
        <% end %>
    </div>
</div>