<div class="container-fluid">
<h1>All Recipes</h1>
    <div class="row my-5">
        <% @recipes.each do |recipe| %>
            <div class="col-md-6 py-2">
                <div class="card m-0">
                    <div class="card border-0" style="width: 100%; height: 100%">
                        <% if recipe.photo.attached? %>
                        <%= cl_image_tag recipe.photo.key, class: "card-img-top" %>
                        <% else %>
                        <%= image_tag "placeholder_recipe.jpg", class: "card-img-top" %>
                        <% end %>
                        <div class="card-body flex-grow-1 p-3">
                            <%= link_to "#{recipe.title}", recipe, style: "color: black; font-size: x-large" %>
                        </div> 
                    </div> 
                </div>
            </div>
        <% end %> 
    </div>
</div>