
<div class="container-fluid">

  <div class="navbar sticky-top bg-white" style="width: 100%; margin-bottom: 0px; margin-top: 16px; padding: 16px 0px;">
    <div class="col-2" style="padding-left: 0px; text-align: left;">
      <%= link_to shopping_lists_path do%>
        <i class="fas fa-chevron-left" style="font-size: 25px; color: #B85A36;"></i>
      <% end %>
    </div>
    <div class="col-8" style="justify-content: center">
      <h4 style="margin-bottom: 0px; text-align: center; padding: 0px;"><%= @shopping_list.title %></h4>
    </div>
    <div class="col-2"></div>
  </div>


  <hr>


  <div class="container-fluid">
      <div class="row my-5">
          <% @shopping_list.shopping_list_ingredients.each do |shopping_list_ingredient| %>
              <div class="col-md-6 py-2">
                  <div class="card m-0">
                      <div class="card border-0" style="width: 100%; height: 100%">
                          <div class="card-body flex-grow-1 p-3">
                          <p><%= shopping_list_ingredient.quantity.to_i %></p>
                          <p><%= shopping_list_ingredient.unit %></p>
                          <p><%= shopping_list_ingredient.ingredient.name %></p>
                          <%= link_to "x", shopping_list_ingredient_path(shopping_list_ingredient), method: :delete %>
                      </div>
                  </div>
              </div>
            </div>
        <% end %>
  </div>


  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ingredientModal">
    Add Ingredient
  </button>


  <!-- Modal -->
  <div class="modal fade" id="ingredientModal" tabindex="-1" role="dialog" aria-labelledby="ingredientModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="ingredientModalLabel">Add ingredient</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
              <%= simple_form_for [@shopping_list, @shopping_list_ingredient] do |f| %>
              <%= f.input :quantity %>
              <%= f.input :unit, collection: ShoppingListIngredient::UNIT %>
              <%= render "ingredients/autocomplete", model_name: 'shopping_list_ingredient' %>
              <%= f.submit "Add Ingredient", class:"btn btn-primary" %>
            <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
