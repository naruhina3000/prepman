 <div class="card m-0" id="cookbook-<%= cookbook.id %>">
    <div class="card border-0" style="width: 100%; height: 100%">
    <div class="cookbook-pictures">
    <% if cookbook.cookbook_recipes != [] %>
          <% if cookbook.cookbook_recipes[0].recipe.photo.attached? %>
          <%= cl_image_tag cookbook.cookbook_recipes[0].recipe.photo.key, class: "card-img-top" %>
          <% else %>
          <%= image_tag "placeholder_recipe.jpg", class: "card-img-top" %>
          <% end %>
        <div>
            <img class="card-img-top" src="..." alt="Card image cap">
            <img class="card-img-top" src="..." alt="Card image cap">
        </div>
    <% end %>
    
    </div>
    
    <%= yield %>
    <div class="card-body">
        <%= cookbook.title %>
        <%= link_to "see cookbook", cookbook_path(cookbook) %>
        <%= link_to "x", cookbook_path(cookbook), method: :delete %>
    </div>
    </div>
</div>
