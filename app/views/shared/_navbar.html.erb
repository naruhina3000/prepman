<footer class="fixed-bottom">
  <div class="navbar navbar-lewagon" style="height: 50px;">
    <div class="grid" style="color: white;">
      <div class="col m-auto">
        <%= link_to recipes_path do %>
          <%= image_tag("Recipe.png", alt: "Recipes", class:"menu-icons") %>
        <% end %>
      </div>
      <div class="col m-auto">
        <% if user_signed_in? %>
          <%= link_to planners_path do %>
            <%= image_tag("calendar.png", alt: "Planner", class:"menu-icons") %>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class:"menu-icons", data: {toggle: "modal", target: "#newUserModal"} do %>
            <%= image_tag("calendar.png", alt: "Planner", class:"menu-icons") %>
          <% end %>
        <% end %>
      </div>
      <div class="col m-auto">
        <% if user_signed_in? %>
          <%= link_to new_recipe_path do %>
            <%= image_tag("add-recipe.png", alt: "Add", class:"menu-icons") %>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class:"menu-icons", data: {toggle: "modal", target: "#newUserModal"} do %>
            <%= image_tag("add-recipe.png", alt: "Add", class:"menu-icons") %>
          <% end %>
        <% end %>
      </div>
      <div class="col m-auto">
        <% if user_signed_in? %>
          <%= link_to shopping_lists_path do %>
            <%= image_tag("shopping-list.png", alt: "Shopping List", class:"menu-icons") %>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class:"menu-icons", data: {toggle: "modal", target: "#newUserModal"} do %>
            <%= image_tag("shopping-list.png", alt: "Shopping List", class:"menu-icons") %>
          <% end %>
        <% end %>
      </div>
      <div class="col m-auto">
        <% if user_signed_in? %>
          <% if current_user.photo.attached? %>
            <%= link_to user_path(current_user) do %>
              <%= cl_image_tag current_user.photo.key, class:"avatar-navbar-bordered" %>
              <%# class: "avatar-bordered dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
          <% else %>
            <%= link_to user_path(current_user) do %>
              <%= image_tag("user.png", alt: "Profile", class:"avatar-navbar") %>
            <% end %>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class:"menu-icons", data: {toggle: "modal", target: "#newUserModal"} do %>
            <%= image_tag("user.png", alt: "Login") %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>


</footer>

 <%= render 'shared/login_modal'%>


