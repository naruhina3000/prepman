<div class="modal fade" id="newUserModal" tabindex="-1" aria-labelledby="newUserModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
       <div class="close-login">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="login-modal-header">
        <div class="logo">
        <%= image_tag("prepman.svg", alt: "logo", class:"logo") %>
        <h3 class="login-modal-title" id="newUserModalLabel">Login</h3>
        </div>
      </div>
      <div class="modal-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class:"btn btn-primary" %>
          </div>
        <% end %>
          <hr>

        
        <%= link_to user_facebook_omniauth_authorize_path, class:"btn btn-social btn-fb", style: "font-size: 10px;" , method: :post do %>
          <i class="fab fa-facebook-square"></i> Login with Facebook
        <% end %>
         <br>

        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up with email", new_registration_path(resource_name), class:"btn btn-info", style: "width: 50%; font-size: 10px" %>
        <% end %>
        <br>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class:"btn btn-success", style: "width: 50%; font-size: 10px" %>
        <% end %>

      </div>
      </div>
    </div>
  </div>